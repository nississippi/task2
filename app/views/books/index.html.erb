<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <!--セル３列結合-->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <!--bookコントローラでindexアクション内に定義したインスタンス変数@booksをallメソッドで全て取得-->
      <% @books.each do |book| %>
        <tr>
          <!--上記ブロック変数”book”を参照している-->
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <!--ルーティングにbookと名前がついている（rails routesでroutesで確認出来る）-->
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to"destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<h2>New book</h2>

<!--エラーを起こした入力欄には自動的に"field_with_errorsのclass属性が付与される-->

<% if @book.errors.any? %>
  <div id = "error-explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<!--入力したデータをnewメソッドで作成した空のオブジェクトに格納-->
<%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit'Create Book' %>
  </div>
<% end %>

