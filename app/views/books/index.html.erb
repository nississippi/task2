<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <!--セル３列結合-->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <!--bookコントローラでindexアクション内に定義したインスタンス変数@booksをallメソッドで全て取得-->
      <% @books.each do |book| %>
        <tr>
          <!--上記ブロック変数”book”を参照している-->
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td>edit</td>
          <td>destroy</td>
        </tr>
      <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<!--入力したデータをnewメソッドで作成した空のオブジェクトに格納-->
<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit'Create Book' %>
<% end %>